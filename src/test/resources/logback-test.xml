<configuration>

    <!-- Аппендер: запись в файл -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/test.log</file>
        <append>true</append>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
